<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:gravity="right"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/marker_icon_bookmark"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:src="@drawable/ic_bookmark_on"/>
        <ImageView
            android:id="@+id/marker_icon_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:visibility="gone"
            android:src="@drawable/ic_informations"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/marker_icon_vlille"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_vlille_free"/>

    <TextView
        android:id="@+id/marker_number_free_vlille"
        android:textSize="20sp"
        android:width="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/marker_icon_parking"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_parking"/>

    <TextView
        android:id="@+id/marker_number_free_attachs"
        android:textSize="20sp"
        android:width="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>